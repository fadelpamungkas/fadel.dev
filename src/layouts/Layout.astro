---
import Header from "@/components/Header.astro";
import "@fontsource-variable/open-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <!-- <SEOTags title={title} /> -->

  <body
    class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-neutral-950 px-10 py-8 text-sm text-neutral-400 md:gap-20 md:py-16"
  >
    <Header />

    <div
      class="fixed z-0 h-[134px] w-[134px] lg:w-[300px] bg-blue-500 lg:h-[300px] rounded-full blur-[150px] md:blur-[350px] opacity-50 left-0 top-0"
    >
    </div>
    <div
      class="fixed bg-sky-500 z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full blur-[150px] md:blur-[350px] opacity-50 right-0 bottom-0"
    >
    </div>
    <slot />
    <style is:global>
      html {
        font-family: "Open Sans Variable", sans-serif;
        /* font-family: Menlo, Monaco, Lucida Console, Liberation Mono, */
        /*   DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace; */
      }
    </style>
  </body>
</html>

