---
type Props = {
  title: string;
  description: string;
  link: string;
  publishedAt: string;
};

const { title, description, link, publishedAt } = Astro.props;
---

<a
  class="group flex w-full cursor-pointer flex-col gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-150 hover:-translate-y-2 hover:border-neutral-400 md:w-1/2"
  href={link}
>
  <div class="flex w-full flex-row justify-between gap-2 md:items-center">
    <p class="truncate text-neutral-100">{title}</p>
    <div class="flex flex-row items-center gap-4">
      <svg
        width="18"
        height="18"
        viewBox="0 0 18 18"
        fill="none"
        class="transition-all duration-150 group-hover:translate-x-1"
      >
        <path
          d="M5.25 12.75L12.75 5.25"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
        <path
          d="M5.25 5.25H12.75V12.75"
          stroke="#999999"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
  </div>

  <p class="truncate">{publishedAt}</p>
</a>
